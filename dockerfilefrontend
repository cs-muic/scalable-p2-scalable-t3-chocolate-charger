# COMMAND TO RUN in LOCAL #
# docker build -f dockerfilefrontend -t p2-frontend .
# docker run --rm -it -p 8080:80 p2-frontend 
##################################################

# stage1 as builder
FROM node:10-alpine as builder

# copy the package.json to install dependencies
COPY frontend-react/my-app/package.json frontend-react/my-app/package-lock.json ./

# Install the dependencies and make the folder
RUN npm install && mkdir /react-ui && mv ./node_modules ./react-ui

WORKDIR /react-ui

COPY frontend-react/my-app .

# Build the project and copy the files
RUN npm run build


FROM nginx:alpine

#!/bin/sh

COPY ./.nginx/nginx.conf /etc/nginx/nginx.conf

## Remove default nginx index page
RUN rm -rf /usr/share/nginx/html/*

# Copy from the stahg 1
COPY --from=builder /react-ui/build /usr/share/nginx/html

EXPOSE 3000 80

ENTRYPOINT ["nginx", "-g", "daemon off;"]